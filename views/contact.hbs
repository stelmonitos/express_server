<h2>Contact me</h2>
{{#if isSent}}
  <div class="isSent">
    File {{file}} has been saved!
  </div>
{{/if}}
{{#if isError}}
  <div class="isError">
    You can't leave fields empty!
  </div>
{{/if}}
<form accept=".png, .jpg, .jpeg, .gif" action="/contact/send-message" method="POST" enctype="multipart/form-data">
  <label>
    Your name:
    <input type="text" name="author" />
  </label>
  <label>
    Your email:
    <input type="email" name="sender" />
  </label>
  <label>
    Title:
    <input type="text" name="title" />
  </label>
  <label>
    Project design:
    <input type="file" name="uploaded_file" />
  </label>
  <label>
    Message:
    <textarea name="message"></textarea>
  </label>
  <button type="submit">Send message</button>
</form>